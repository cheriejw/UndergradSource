<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Range seek bar from code with custom color to text above thumbs "/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:id="@+id/rangeSeekBarTextColorWithCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="true"
            rsb:activeColor="@color/primary"
            rsb:barHeight="5dp"
            rsb:singleThumb="false"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MinVal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max"/>
    </LinearLayout>

</ScrollView>
