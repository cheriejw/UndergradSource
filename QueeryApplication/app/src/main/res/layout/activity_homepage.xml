<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Profile"
            android:id="@+id/textSliderView"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20px" />

        <!-- The Person's Whole Values for their Slider-->

        <ImageView
            android:layout_width="161dp"
            android:layout_height="160dp"
            android:id="@+id/profileImage"
            android:layout_gravity="center_horizontal"
            android:layout_weight="8.07" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username"
            android:id="@+id/usernameText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Personal Sliders"
            android:id="@+id/textPersonalView"
            android:paddingTop="20dp" />

        <!-- The Personal Gender Values-->
        <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homePGender"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp"
            rsb:singleThumb="true" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Man                                                                                          Woman"
            android:id="@+id/textView17"
            android:textSize="10dp" />


        <!-- The Personal Expression Values-->

        <TextView
            android:text="Expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homePExpress"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp"
            rsb:singleThumb="true"
            />

        <TextView
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Masculine                                                                               Feminine"
            android:id="@+id/textView18"
            android:textSize="10dp" />


        <!-- The Personal Orientation Values-->
        <TextView
            android:text="Orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />


        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homePOrient"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp"
            rsb:singleThumb="true"
            />

        <TextView
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Straight                                                                                          Gay"
            android:id="@+id/textView19"
            android:textSize="10dp" />

        <!-- The Seeker's Whole Values for their Slider-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seeking Sliders"
            android:id="@+id/textView"
            android:paddingTop="20dp" />


        <!-- The Seeker's Gender Values-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gender"
            android:id="@+id/textView3"
            android:paddingTop="20dp" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeSeekGenderBar"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp" />

        <!-- The Seeker's Expression Values-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Man                                                              Woman"
            android:id="@+id/textView20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Expression"
            android:id="@+id/textview4"
            android:paddingTop="20dp" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeSeekExpressBar"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp" />

        <!-- The Seeker's Orientation Values-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Masculine                                                  Feminine"
            android:id="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Orientation"
            android:id="@+id/textView7"
            android:paddingTop="20dp" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeSeekOrientBar"
            android:layout_gravity="center_horizontal"
            rsb:absoluteMaxValue="20"
            rsb:absoluteMinValue="1"
            rsb:showLabels="false"
            rsb:barHeight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Straight                                                                Gay"
            android:id="@+id/textView22" />

        <Button
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="Edit Picture"
            android:id="@+id/editPictureButton" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Edit Sliders"
            android:id="@+id/editSliders" />

        <Button
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:id="@+id/findMatchesButton"
            android:text="Get Matches" />

        <Button
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/hLogout" />

    </LinearLayout>
</RelativeLayout>
</ScrollView>